<style>
  .icon-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background-color: #f8f9fa; /* Light gray background */
    transition: all 0.3s ease-in-out;
  }

  .icon {
    width: 32px;
    height: 32px;
    color: #008080; /* Teal */
    transition: color 0.3s;
  }

  .icon-link:hover {
    background-color: #008080;
  }

  .icon-link:hover .icon {
    color: white;
  }
</style>

<style>
  /* Custom CSS to position arrows inside the text section */
  .custom-prev, .custom-next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px; /* Adjust button size */
    height: 40px;
    background-color: rgba(0, 0, 0, 0.3); /* Semi-transparent background */
    border-radius: 50%;
    border: none;
  }

  .custom-prev {
    left: -40px; /* Moves the left arrow inside the text area */
  }

  .custom-next {
    right: -20px; /* Moves the right arrow inside the text area */
  }

  /* Adjusting icon sizes */
  .carousel-control-prev-icon, 
  .carousel-control-next-icon {
    width: 15px;
    height: 15px;
  }
</style>
